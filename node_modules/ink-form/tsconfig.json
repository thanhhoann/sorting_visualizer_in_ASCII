{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "es2018"],
    "esModuleInterop": true,
    "jsx": "react",
    "declaration": true,
    "module": "CommonJS",
    "outDir": "lib",
    "strictNullChecks": true,
    "moduleResolution": "Node",
    "allowJs": false,
    "rootDir": "src"
  },
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.spec.tsx", "lib", "docs"]
}
